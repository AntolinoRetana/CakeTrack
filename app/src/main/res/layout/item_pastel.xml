<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp"
    android:radius="16dp"
    android:elevation="6dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="1"
        android:background="@drawable/cards"
        android:padding="8dp">

        <!-- Info del pastel -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombrePastel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pastel de Chocolate"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvDescripcionPastel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relleno de fresa y cobertura de crema"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvTamanoPastel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tamaño: Grande"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvPrecioPastel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio: $180.00"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvCantidadPastel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad: 4"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvDisponiblePastel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponible"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageView
                android:id="@+id/btnEditarPastel"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:contentDescription="Editar"
                android:background="@color/rosaBotonesEncabezados"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageView
                android:id="@+id/btnEliminarPastel"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="@color/rosaBotonesEncabezados"                android:contentDescription="Eliminar" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
