<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFF8E1"
>

        <EditText android:id="@+id/etNombreCliente"
            android:layout_width="match_parent"
            android:hint="Nombre completo"
            android:layout_height="45dp"
            android:background="@drawable/edit_text_redondito"
            android:fontFamily="@font/nunitoprincipal"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/etTelefonoCliente"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_redondito"
            android:hint="Teléfono"
            android:inputType="phone"
            android:fontFamily="@font/nunitoprincipal"
            android:paddingLeft="15dp"/>

        <EditText android:id="@+id/etDireccionCliente"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edit_text_redondito"
            android:hint="Dirección"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunitoprincipal"
            android:paddingLeft="15dp"/>

        <EditText android:id="@+id/etCorreoCliente"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edit_text_redondito"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunitoprincipal"
            android:paddingLeft="15dp"/>

        <EditText android:id="@+id/etNotasCliente"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edit_text_redondito"
            android:hint="Notas adicionales"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunitoprincipal"
            android:paddingLeft="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/black"
                android:fontFamily="@font/nunitoprincipal"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:backgroundTint="@color/rosaBotonesEncabezados"
                android:textColor="@color/white"
                android:fontFamily="@font/nunitoprincipal"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
