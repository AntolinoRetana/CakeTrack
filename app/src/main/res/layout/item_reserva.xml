<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp"
    android:radius="16dp"
    android:elevation="6dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="1"
        android:background="@drawable/cards"
        android:padding="8dp">

        <!-- Info de la reserva -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:paddingLeft="7dp">

            <TextView
                android:id="@+id/tvCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cliente"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvPastel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pastel"
                android:textSize="16sp"
                android:textColor="#444444"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/tvFechaCreacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de CreaciÃ³n"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/tvPago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pago"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvNotas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notas"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginTop="6dp"/>

        </LinearLayout>

        <!-- Botones editar/eliminar a la derecha -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">

            <ImageView
                android:id="@+id/btnEditar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:background="@color/rosaBotonesEncabezados"
                android:contentDescription="Editar"
                android:padding="6dp"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageView
                android:id="@+id/btnEliminar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@color/rosaBotonesEncabezados"
                android:contentDescription="Eliminar"
                android:padding="6dp"
                android:src="@android:drawable/ic_menu_delete" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>