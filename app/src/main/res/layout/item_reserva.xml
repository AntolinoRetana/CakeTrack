<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@color/fondoTargetas"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/fondoTargetas">

        <!-- Contenedor principal horizontal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Informaci贸n de la reserva -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitoprincipal"
                    android:text="Cliente"
                    android:textColor="@color/chocolateClaro"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvPastel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/nunitoprincipal"
                    android:text="Pastel"
                    android:textColor="@color/textoSecundario"
                    android:textSize="16sp"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/nunitoprincipal"
                    android:text="Fecha"
                    android:textColor="@color/textoSecundario"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvFechaCreacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/nunitoprincipal"
                    android:text="Fecha de Creaci贸n"
                    android:textColor="@color/textoSecundario"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Botones de acci贸n verticales -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    android:background="@color/botonSuave">

                    <ImageView
                        android:id="@+id/btnEditar"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Editar reserva"
                        android:padding="8dp"
                        android:src="@android:drawable/ic_menu_edit"
                        android:tint="@color/colorPrimary" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp">

                    <ImageView
                        android:id="@+id/btnEliminar"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Eliminar reserva"
                        android:padding="8dp"
                        android:src="@android:drawable/ic_menu_delete"
                        android:tint="@color/error" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Secci贸n inferior con detalles adicionales -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/rosaPastel"
            android:layout_marginHorizontal="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingTop="12dp">

            <!-- Estado -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitoprincipal"
                    android:text="Estado"
                    android:textColor="@color/textoSecundario"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- Pago -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvPago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitoprincipal"
                    android:text="Pago"
                    android:textColor="@color/textoSecundario"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Notas (l铆nea separada) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvNotas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunitoprincipal"
                android:text="Notas"
                android:textColor="@color/textoSecundario"
                android:textSize="13sp"
                android:textStyle="italic"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>