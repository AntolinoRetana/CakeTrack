<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@color/fondoTargetas"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/fondoTargetas">

        <!-- Contenedor principal horizontal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Contenedor de avatar con sombra -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="3dp" />

            <!-- Informaci贸n del usuario -->
            <LinearLayout
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunitoprincipal"
                    android:maxLines="1"
                    android:text="Nombre"
                    android:textColor="@color/chocolateClaro"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Contenedor de rol con estilo de badge -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imgRol"
                        android:layout_width="47dp"
                        android:layout_height="42dp"
                        android:layout_marginEnd="4dp"
                        android:src="@android:drawable/ic_menu_edit" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp">

                        <TextView
                            android:id="@+id/tvRol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:fontFamily="@font/nunitoprincipal"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="admin"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Botones de acci贸n verticales -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@color/botonSuave"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp">

                    <ImageView
                        android:id="@+id/btnEditar"
                        android:layout_width="35dp"
                        android:layout_height="37dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Editar usuario"
                        android:padding="8dp"
                        android:src="@android:drawable/ic_menu_edit"
                        android:tint="@color/colorPrimary" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp">

                    <ImageView
                        android:id="@+id/btnEliminar"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Eliminar usuario"
                        android:padding="8dp"
                        android:src="@android:drawable/ic_menu_delete"
                        android:tint="@color/error" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Secci贸n inferior con informaci贸n adicional -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingTop="12dp">

            <!-- Estado activo -->

            <!-- Fecha 煤ltimo acceso -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@color/rosaPastel" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>